<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="loom.time.Views.Login" 
             Icon="login.png" 
             Title="Login">
    
    <ContentPage.Content>
        
    <FlexLayout Direction="Column"
                AlignItems="Center"
                JustifyContent="Start">
        
            <Label Text="User"
                   Font="Verdana"
                   FontSize="40"
                   Margin="0,60,0,0"
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" />
            

            <Entry Placeholder="Enter Stuff Number"
                   FontFamily="Verdana"
                   WidthRequest="250"
                   HeightRequest="50"
                   Keyboard="Numeric"
                   MaxLength="4"
                   FontSize="Large"
                   Margin="0,20,0,0"
                   HorizontalTextAlignment="Center"/>
            
            <Button Text="Login"
                    Font="Verdana"
                    TextColor="Black"
                    WidthRequest="250"
                    HeightRequest="50"
                    FontSize="Large"
                    Margin="0,20,0,0"
                    BackgroundColor="#FF8C1A"
                    BorderWidth="1"/>

        </FlexLayout>
    </ContentPage.Content>
    
</ContentPage>


